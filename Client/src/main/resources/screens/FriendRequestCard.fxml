<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- Add the fx namespace declaration -->

<HBox fx:id="DynamicHBox" alignment="CENTER_LEFT" minHeight="70.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
   <effect>
      <DropShadow blurType="GAUSSIAN" color="#8bb2b5" />
   </effect>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <ImageView fitHeight="50.0" fitWidth="50.0">
         <image>
            <Image url="@../images/boy.png" />
         </image>
      </ImageView>
      <Label text="contactName Sent you a friend request" HBox.hgrow="ALWAYS">
         <font>
            <Font size="18.0" />
         </font>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Label>
      <Region HBox.hgrow="ALWAYS" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" style="-fx-background-color: linear-gradient(to bottom, #13531a 0%, #80d0c7 100%);" text="Accept" textFill="WHITE" />
            <Button mnemonicParsing="false" prefHeight="31.0" prefWidth="66.0" style="-fx-background-color: linear-gradient(to bottom, #13547a 0%, #80d0c7 100%);" text="Reject" textFill="WHITE" />
         </children>
      </HBox>
   </children>
</HBox>
