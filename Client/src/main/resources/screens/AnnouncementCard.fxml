<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox fx:id="DynamicHBox" alignment="CENTER_LEFT" minHeight="70.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <effect>
      <DropShadow blurType="GAUSSIAN" color="#8bb2b5" />
   </effect>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Label text="Check for new updates" HBox.hgrow="ALWAYS">
         <font>
            <Font size="18.0" />
         </font>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Label>
      <Region HBox.hgrow="ALWAYS" />
      <HBox alignment="CENTER" spacing="10.0" />
      <Button mnemonicParsing="false" style="-fx-background-color: #ffffff;">
         <graphic>
            <ImageView fitHeight="35.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/upper-right-arrow.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</HBox>
