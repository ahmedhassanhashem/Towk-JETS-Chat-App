<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox maxWidth="300.0" minHeight="100.0" minWidth="230.0" style="-fx-background-color: #f5fafc;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" minHeight="70.0" style="-fx-background-color: #dde5ea;">
               <children>
                  <ImageView fitHeight="20.0" fitWidth="20.0">
                     <image>
                        <Image url="@../images/search.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <TextField promptText="search chats" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <ImageView fitHeight="20.0" fitWidth="20.0" onMouseClicked="#addContact">
                     <image>
                        <Image url="@../images/add-user.png" />
                     </image>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </left>
   <center>
      <BorderPane fx:id="borderPane" minHeight="300.0" minWidth="300.0" styleClass="borderPane" stylesheets="@../styles/stylee.css">
         <center>
            <ImageView fitHeight="115.0" fitWidth="259.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../images/logo5.png" />
               </image>
            </ImageView>
         </center>
      </BorderPane>
   </center>
</BorderPane>
