<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER_LEFT" prefHeight="500.0" prefWidth="600.0" spacing="10" style="-fx-background-color: #f9f9f9;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <HBox prefHeight="63.0" prefWidth="719.0" spacing="50.0" VBox.vgrow="ALWAYS">
            <children>
                <Label style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #13547a;" text="Create New Group" />
                <Region prefHeight="45.0" prefWidth="128.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Region>
                <Button mnemonicParsing="false" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fx:id="exitButton" fitHeight="26.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@ChatApp-JETS/Client/src/main/resources/images/close.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label text="Group Name:" />
                <TextField fx:id="groupNameField" promptText="Enter group name" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets right="20.0" />
            </padding>
        </HBox>

        <VBox alignment="CENTER" spacing="10">
            <children>
                <Label text="Group Photo:" />
                <ImageView fx:id="photoImageView" fitHeight="100" fitWidth="100" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
                    <image>
                        <Image url="@images/group1.png" />
                    </image>
                </ImageView>
                <Button fx:id="choosePhotoButton" style="-fx-background-color: #80d0c7;" text="Choose Photo" textFill="WHITE" />
            </children>
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-background-color: white; -fx-border-radius: 5;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label style="-fx-font-weight: bold;" text="Select Group Members:" />
            <ListView prefHeight="200.0" prefWidth="200.0" />
            </children>
        </VBox>

        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="createGroupButton" onMouseEntered="#handleMouseEntered" style="-fx-background-color: linear-gradient(to bottom, #13547a 0%, #80d0c7 100%); -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-background-radius: 5;" text="Create Group" />
            </children>
        </HBox>
    </children>
</VBox>
